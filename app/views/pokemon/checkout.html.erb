<h1>Pokemon#checkout</h1>


<h3><%= @pokemon.name %>'s Checkout</h3>
<p>Base Experience: <%= @pokemon.base_experience %></p>

<hr>
<p><%= @pokemon.name %>'s price': <%= @pokemon.price %></p>
<p>Bitcoin Price Today: <%= @btc_price %></p>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<p><%= button_to "Sell for USD #{@price_in_usd.round(2)}", pokemon_sell_path(@pokemon.id) %></p>

<p><%= button_to "Buy for USD #{@price_in_usd.round(2)}", pokemon_buy_path(@pokemon.id) %></p>


